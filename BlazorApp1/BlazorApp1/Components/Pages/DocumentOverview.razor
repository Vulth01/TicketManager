@page "/documentOverview"
@inject DocumentClient Client



<style>
    th {
        white-space: nowrap;
    }
</style>

<h1>Overview</h1>

@if (documents is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped table-bordered table-hover mt-4">
        <thead class="table-dark">
        <th>Id</th>
        <th>Name</th>
        <th>Last Updated</th>
        <th>Complete</th>
        <th>Type</th>
		<th>Date Created</th>
		<th>Customer</th>
        <th>Site</th>
        <th>User</th>
        <th>Summary</th>
		<th>Status</th>
		<th>SLA Time Left</th>
        <th>Priority</th>
		<th>Time Taken</th>
        <th>Agent</th>
		<th>Ticket Age</th>
		<th>Working Hours</th>
        <th>Team</th>
        <th>Last Action Date</th>
        <th>Category</th>
		<th>Date Closed</th>



        <th></th>
        </thead>
        <tbody>
            @foreach (var document in documents)
            {
                <tr>
                    <td>@document.Id</td>
                    <td>@document.Name</td>
                    <td>@document.LastUpdated</td>
                    <td>@document.Complete</td>
					<td>@document.Type</td>
                    <td>@document.DateCreated</td>
					<td>@document.Customer</td>
					<td>@document.Site</td>
                    <td>@document.User</td>
                    <td>@document.Summary</td>
                    <td>@document.Status</td>
                    <td>@document.SLATimeLeft</td>
                    <td>@document.Priority</td>
                    <td>@document.TimeTaken</td>
                    <td>@document.Agent</td>
                    <td>@document.TicketAge</td>
					<td>@document.WorkingHours</td>
                    <td>@document.Team</td>
                    <td>@document.LastActionDate</td>
                    <td>@document.Category</td>
                    <td>@document.DateClosed</td>

                    <!-- EDIT + DELETE -->
                    <td>
                        <div class="d-flex">
                            <a class="btn btn-secondary me-2" role="button" href="@DocumentUrl(document.Id)">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <button class="btn btn-danger"
                                    data-bs-toggle="modal"
                                    data-bs-target="@GetDeleteModalId(document)">
                                <i class="bi bi-trash3"></i>
                            </button>
                        </div>
                        <DeleteDocument Document="@document" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


@code {

    private DocumentSummary[]? documents;

    protected override void OnInitialized()
    {
        documents = Client.GetDocs();
    }

    private static string DocumentUrl(int id) => $"/document/{id}";


    private string GetDeleteModalId(DocumentSummary document) => $"#{DeleteDocument.GetModalId(document)}";

}