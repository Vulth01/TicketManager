@page "/add-ticket"
@inject NavigationManager NavigationManager
@attribute [Authorize(Roles = "Administrator, User")]


<PageTitle>ADvTECH Group | Select Template</PageTitle>


<h3 style="margin-bottom: 1%">Select Ticket Template</h3>

@* NAVIGATION BAR *@
<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
	<nav class="d-flex flex-column">

        @* ALL USERS *@
		<AuthorizeView Roles="Administrator,User">
			<Authorized>
				<div style="background-color: #ffffff; height: 20px;"></div>

                @* LAPTOP *@
				<div class="mb-3">
					<a class="btn btn-primary template-button" href="add-ticket/LaptopRepair">
						<span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Laptop
					</a>
				</div>

				<div style="background-color: #ffffff; height: 10px;"></div>

                @* PRINTER *@
				<div class="mb-3">
					<a class="btn btn-primary template-button" href="add-ticket/PrinterRepair">
						<span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Printer
					</a>
				</div>

				<div style="background-color: #ffffff; height: 10px;"></div>

                @* TEMPLATE 3 *@
				<div class="mb-3">
					<a class="btn btn-primary template-button" href="add-ticket/Template3">
						<span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Template 3
					</a>
				</div>

				<div style="background-color: #ffffff; height: 10px;"></div>

			</Authorized>
		</AuthorizeView>

	</nav>
</div>


